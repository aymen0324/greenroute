{
  "version": 2,
  "name": "greenroute",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "env": {
    "VITE_API_URL": "@greenroute_api_url",
    "VITE_WS_URL": "@greenroute_ws_url", 
    "VITE_GOOGLE_MAPS_API_KEY": "@google_maps_api_key"
  },
  "build": {
    "env": {
      "VITE_API_URL": "@greenroute_api_url",
      "VITE_WS_URL": "@greenroute_ws_url",
      "VITE_GOOGLE_MAPS_API_KEY": "@google_maps_api_key"
    }
  }
}
