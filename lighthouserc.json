{
  "ci": {
    "collect": {
      "url": [
        "http://localhost:3000",
        "http://localhost:3000/rutas",
        "http://localhost:3000/eficiencia-verde",
        "http://localhost:3000/escalabilidad",
        "http://localhost:3000/technologies"
      ],
      "startServerCommand": "npm run preview",
      "numberOfRuns": 3,
      "settings": {
        "chromeFlags": "--no-sandbox --disable-setuid-sandbox --disable-dev-shm-usage",
        "preset": "desktop",
        "throttling": {
          "rttMs": 40,
          "throughputKbps": 10240,
          "cpuSlowdownMultiplier": 1,
          "requestLatencyMs": 0,
          "downloadThroughputKbps": 0,
          "uploadThroughputKbps": 0
        },
        "emulatedFormFactor": "desktop"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["warn", {"minScore": 0.85}],
        "categories:accessibility": ["error", {"minScore": 0.95}],
        "categories:best-practices": ["warn", {"minScore": 0.90}],
        "categories:seo": ["warn", {"minScore": 0.85}],
        "categories:pwa": ["warn", {"minScore": 0.80}]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    },
    "server": {
      "port": 9001,
      "storage": "./lighthouse-reports"
    }
  }
}
